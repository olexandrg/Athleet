<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <net.azurewebsites.athleet.WorkoutView
        android:id="@+id/workoutView"
        android:layout_width="387dp"
        android:layout_height="107dp"
        android:paddingLeft="20dp"
        android:paddingBottom="40dp"
        android:visibility="invisible"
        app:exampleDimension="24sp"
        app:exampleDrawable="@color/gray_600"
        app:exampleString="Hello, WorkoutView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="108dp"
        android:layout_height="27dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="62dp"
        android:text="Last gainz: "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/workoutView"
        app:layout_constraintStart_toEndOf="@+id/textView_WorkoutName"
        app:layout_constraintTop_toTopOf="@+id/workoutView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_LastWorkoutDate"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView_WorkoutName"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView_WorkoutName"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:text="Workout Name"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/workoutView"
        app:layout_constraintStart_toStartOf="@+id/workoutView"
        app:layout_constraintTop_toTopOf="@+id/workoutView"
        app:layout_constraintVertical_bias="0.486" />

</androidx.constraintlayout.widget.ConstraintLayout>